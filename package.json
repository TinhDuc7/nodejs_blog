{
    "name": "blog",
    "version": "1.0.0",
    "main": "src/index.js",
    "scripts": {
        "format": "lint-staged",
        "bea": "prettier --single-quote --trailing-comma all --write src/**/*.{js,json,scss,html,hbs}",
        "start": "nodemon --inspect src/index.js",
        "watch": "node-sass --watch src/resources/scss/ --output src/public/css/",
        "test": "echo \"Error: no test specified\" && exit 1",
        "prepare": "husky install",
        "pre-commit": "lint-staged",
        "eslint": "npx eslint src/**/*.js --fix"
    },
    "lint-staged": {
        "*.js": "eslint",
        "src/**/*.{js,json,scss,html,hbs}": [
            "prettier --single-quote --trailing-comma all --write",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TinhDuc7/nodejs_blog.git"
    },
    "keywords": [
        "td",
        "blog",
        "td",
        "nodejs",
        "nodejs"
    ],
    "author": "TinhDuc",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/TinhDuc7/nodejs_blog/issues"
    },
    "homepage": "https://github.com/TinhDuc7/nodejs_blog#readme",
    "dependencies": {
        "express": "^4.18.2",
        "express-handlebars": "^7.0.4",
        "method-override": "^3.0.0",
        "mongoose": "^7.1.0"
    },
    "devDependencies": {
        "@babel/core": "^7.21.4",
        "@babel/eslint-parser": "^7.21.3",
        "babel-eslint": "^10.1.0",
        "eslint": "^8.39.0",
        "eslint-config-google": "^0.14.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.32.2",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.1",
        "mongoose-slug-updater": "^3.3.0",
        "morgan": "^1.10.0",
        "node-sass": "^8.0.0",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.7"
    }
}
